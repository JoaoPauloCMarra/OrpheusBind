{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES6",
    "jsx": "react",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/*.ts", "./src/*.tsx"],
  "exclude": ["dist", "node_modules"]
}
